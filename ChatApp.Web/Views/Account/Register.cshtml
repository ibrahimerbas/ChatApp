@model ChatApp.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="login__wrapper container">
    <div class="row login__wrapper--centered">
        <div class="login__window col-md-4 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {id="loginForm", @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Nickname, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <div>
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="login__wrapper container">
    <div class="row login__wrapper--centered">
        <div class="login__window col-md-4 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form id="loginForm" action="/signup" method="post">
                        <div class="form-group">
                            <label for="inputEmail">Email adresin</label>
                            <input type="email" class="form-control" id="inputEmail" required="required" placeholder="Sifreni unutursan lazim olabilir.">
                        </div>
                        <div class="form-group">
                            <label for="inputUsername">Kullanici adin</label>
                            <input type="text" class="form-control" id="inputUsername" required="required">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Sifren</label>
                            <input type="password" class="form-control" id="inputPassword">
                        </div>
                        <div class="form-group">
                            <label for="avatarInputFile">Avatar</label>
                            <input type="file" id="avatarInputFile" required="required">
                            <p class="help-block">Avatarini da buradan ekle</p>
                        </div>
                        <button type="submit" id="loginButton" class="btn btn-default" required="required">Vurdurmak istiyorum!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
